<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>NinjaShare<%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div id="wrap" class="box_effect">
      <header>
        <div>
          <h1><a href="/">NinjaShare</a></h1>
          <div id="side">
            <%- username_or_login %>
          </div>
        </div>
        <nav>
          <ul class="clear">
            <li><a href="/">Top</a></li>
            <li><a href="/profile/">Profile</a></li>
            <form id="login" action="/user/search" method="post">
                <%- message('searchError') %>
                <input id="search_username" type="text" name="username" 
                size="10" placeholder="username"><input id="search_email" type="text" name="email"
                size="15" placeholder="email"><input type="submit" class="newpost" value="search">
            </form>
          </ul>
        </nav>
      </header>
      <%- body %>
    </div>
  </body>
</html>
